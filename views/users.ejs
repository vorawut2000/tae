<% include layout.ejs %>
    <div class="container">
        <nav>
            <a href="/">firstPage |</a>
            <a href="/users">User |</a>
        </nav>
        <form action="/users/search" method="post">
            <input type="text" name="q" size="15" placeholder="find users" />
            <input type="submit" value="find" class="btn"/>
        </form>
    </div>
        <br>
    <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Profile Picture</th>
                <th scope="col">Role</th> 
                <!-- <th scope="col">id</th> -->
                <th scope="col">Username</th>
                <th scope="col">Name</th>
                <th scope="col">Gender</th>
                <!-- <th scope="col">Birth_date</th> -->
                <th scope="col">Email</th>
                <th scope="col">PhoneNumber</th>

            </tr>
        </thead>

        <% for(let item of data) {%>
            <tr>
                <td>
                    <% if(item.image){%>                  
                    <img src="./uploads/<%=item.image%>" class="img-fluid img-circle" width="90" height="90">      
                    <%}%>          
                </td>
                <td><%= item.userRole %></td>
                <!-- <td><%= item._id %></td> -->
				<td><%= item.username %></td>
                <td><%= item.firstname +" "+ item.lastname %></td>
                <td><%= item.gender %></td>
                <!-- <td><%= item.birth_date %></td> -->
                <td><%= item.email %></td>
                <td><%= item.phoneNumber %></td>

                <td><a class="btn btn-primary" href="/users/<%= item._id %>">More Info</a></td>

            </tr>
            
        <%}  %>      
    </table>
    </div>

</body>
</html>